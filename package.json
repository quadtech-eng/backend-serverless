{
  "name": "relp-core-plataform",
  "version": "1.0.0",
  "description": "RELP Core Plataform",
  "main": "serverless.ts",
  "scripts": {
    "start": "npm run compose && npm run infra-local && npx nodemon --exec npm run offline",
    "infra-local": "chmod +x ./scripts/* && chmod +x ./scripts/s3/* && sh ./scripts/index.sh > /dev/null 2>&1 &",
    "offline": "npx sls offline start --host 0.0.0.0  --reloadHandler --ignoreJWTSignature",
    "compose": "docker-compose up -d",
    "test": "IS_OFFLINE=true npx jest --collect-coverage",
    "test:watch": "IS_OFFLINE=true npx jest --watch-all",
    "deploy:dev": "serverless deploy --stage dev --aws-profile default"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@aws-sdk/client-secrets-manager": "^3.525.0",
    "@aws-sdk/client-ssm": "^3.525.0",
    "@aws-sdk/s3-request-presigner": "^3.525.0",
    "@supabase/supabase-js": "^2.56.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "serverless-plugin-log-retention": "^2.0.0",
    "supabase": "^2.39.2",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@rocketseat/eslint-config": "^2.2.2",
    "@serverless/typescript": "^3.38.0",
    "@types/aws-lambda": "^8.10.136",
    "@types/node": "^20.11.24",
    "dotenv": "^16.4.5",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.51.0",
    "serverless-offline": "^13.3.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
